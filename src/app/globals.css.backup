@import "tailwindcss";

/* Feather Bold Font from Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Feather:wght@300;400;700&display=swap');

/* Apply Feather Bold globally */
* {
  font-family: 'Feather', sans-serif !important;
  font-weight: 700 !important;
}

:root {
  /* Material 3 Color System - Navy Blue & Light Pink */
  --md3-primary: #1a237e;
  --md3-on-primary: #ffffff;
  --md3-primary-container: #c5cae9;
  --md3-on-primary-container: #000051;
  
  --md3-secondary: #f8bbd9;
  --md3-on-secondary: #1a0a14;
  --md3-secondary-container: #fce4ec;
  --md3-on-secondary-container: #2e1a24;
  
  --md3-tertiary: #e1bee7;
  --md3-on-tertiary: #ffffff;
  --md3-tertiary-container: #f3e5f5;
  --md3-on-tertiary-container: #4a148c;
  
  --md3-surface: #ffffff;
  --md3-surface-variant: #ffffff;
  --md3-surface-container: #ffffff;
  --md3-surface-container-high: #ffffff;
  --md3-on-surface: #000000;
  --md3-on-surface-variant: #000000;
  
  --md3-outline: #000000;
  --md3-outline-variant: #000000;
  
  --md3-background: #ffffff;
  --md3-on-background: #000000;
  
  /* Hatching Patterns - Gray for shadows only */
  --hatching-light: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 8px,
    #cccccc 8px,
    #cccccc 8.5px
  );
  --hatching-medium: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 6px,
    #999999 6px,
    #999999 6.5px
  );
  --hatching-dense: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 4px,
    #666666 4px,
    #666666 4.5px
  );
  --hatching-cross: 
    repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      #cccccc 10px,
      #cccccc 10.5px
    ),
    repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 10px,
      #cccccc 10px,
      #cccccc 10.5px
    );
  
  /* Motion Variables */
  --md3-motion-duration-short: 200ms;
  --md3-motion-duration-medium: 300ms;
  --md3-motion-duration-long: 500ms;
  --md3-motion-easing-emphasized: cubic-bezier(0.2, 0.0, 0, 1.0);
  --md3-motion-easing-standard: cubic-bezier(0.4, 0.0, 0.2, 1);
  
  /* Hatching System (replacing elevation) */
  --md3-hatching-1: var(--hatching-light);
  --md3-hatching-2: var(--hatching-medium);
  --md3-hatching-3: var(--hatching-dense);
  --md3-hatching-4: var(--hatching-cross);
  
  /* Typography Scale - Larger Sizes */
  --md3-display-large: 64px;
  --md3-display-medium: 52px;
  --md3-display-small: 42px;
  --md3-headline-large: 38px;
  --md3-headline-medium: 32px;
  --md3-headline-small: 28px;
  --md3-title-large: 26px;
  --md3-title-medium: 22px;
  --md3-title-small: 20px;
  --md3-body-large: 20px;
  --md3-body-medium: 18px;
  --md3-body-small: 16px;
}

@media (prefers-color-scheme: dark) {
  :root {
    --md3-surface: #000000;
    --md3-surface-variant: #000000;
    --md3-surface-container: #000000;
    --md3-surface-container-high: #000000;
    --md3-on-surface: #ffffff;
    --md3-on-surface-variant: #ffffff;
    --md3-outline: #ffffff;
    --md3-outline-variant: #ffffff;
    --md3-background: #000000;
    --md3-on-background: #ffffff;
  }
}

body {
  background: var(--md3-background);
  color: var(--md3-on-background);
  font-family: 'UT Breado Sans', 'Helvetica', 'Arial', sans-serif;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  padding: 0 16px;
}

@media (min-width: 768px) {
  body {
    padding: 0 32px;
  }
}

@media (min-width: 1024px) {
  body {
    padding: 0 64px;
  }
}

/* Prevent font clipping */
* {
  text-overflow: clip;
  overflow-wrap: break-word;
}

/* Ensure proper spacing for custom fonts */
h1, h2, h3, h4, h5, h6, p, span, div {
  font-feature-settings: "kern" 1;
  font-variant-ligatures: common-ligatures;
}

/* Material 3 Components with UT Breado Sans and Hatching */
.ankid-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: 16px;
  font-weight: 600;
  font-size: 18px;
  transition: all 200ms var(--md3-motion-easing-emphasized);
  background: var(--md3-primary);
  color: var(--md3-on-primary);
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  font-family: 'UT Breado Sans', 'Helvetica', 'Arial', sans-serif;
  line-height: 1.4;
  transform: translateZ(0);
}

.ankid-button:hover {
  transform: translateY(-2px) translateZ(0);
  background-image: var(--md3-hatching-2);
  background-blend-mode: multiply;
  opacity: 0.9;
}

.ankid-button:active {
  transform: translateY(0px) scale(0.98) translateZ(0);
}

.ankid-button-secondary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: 16px;
  font-weight: 600;
  font-size: 18px;
  transition: all 200ms var(--md3-motion-easing-emphasized);
  background: var(--md3-surface);
  color: var(--md3-on-surface);
  border: 1px solid #000000;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  font-family: 'UT Breado Sans', 'Helvetica', 'Arial', sans-serif;
  line-height: 1.4;
  transform: translateZ(0);
}

.ankid-card {
  border-radius: 24px;
  padding: 24px;
  transition: all 300ms var(--md3-motion-easing-emphasized);
  background: var(--md3-surface);
  border: 1px solid #000000;
  position: relative;
  transform: translateZ(0);
}

.ankid-card::after {
  content: '';
  position: absolute;
  top: 6px;
  left: 6px;
  right: -6px;
  bottom: -6px;
  background: var(--md3-hatching-1);
  border-radius: 24px;
  z-index: -1;
  opacity: 0.3;
}

.ankid-card:hover {
  transform: translateY(-4px) rotateX(2deg) translateZ(0);
}

.ankid-card:hover::after {
  background: var(--md3-hatching-2);
  opacity: 0.4;
}

.ankid-paper {
  border-radius: 24px;
  transition: all 300ms var(--md3-motion-easing-emphasized);
  background: var(--md3-surface);
  border: 1px solid #000000;
  position: relative;
  overflow: hidden;
}

.ankid-paper::after {
  content: '';
  position: absolute;
  top: 4px;
  left: 4px;
  right: -4px;
  bottom: -4px;
  background: var(--md3-hatching-2);
  border-radius: 24px;
  z-index: -1;
  opacity: 0.25;
}

.ankid-input {
  width: 100%;
  padding: 16px 24px;
  border-radius: 16px;
  border: 1px solid #000000;
  transition: all 300ms var(--md3-motion-easing-emphasized);
  background: var(--md3-surface);
  color: var(--md3-on-surface);
  font-family: 'UT Breado Sans', 'Helvetica', 'Arial', sans-serif;
  line-height: 1.5;
  font-size: 18px;
}

.ankid-input:focus {
  outline: none;
  border-color: var(--md3-primary);
  background: var(--md3-surface);
  transform: translateY(-2px);
}

.ankid-badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 12px;
  border-radius: 9999px;
  font-size: 16px;
  font-weight: 600;
  background: var(--md3-secondary);
  color: var(--md3-on-secondary);
  font-family: 'UT Breado Sans', 'Helvetica', 'Arial', sans-serif;
  line-height: 1.3;
}

.ankid-nav-tab {
  padding: 8px 16px;
  border-radius: 9999px;
  font-size: 18px;
  font-weight: 500;
  transition: all 200ms var(--md3-motion-easing-emphasized);
  color: var(--md3-on-surface-variant);
  position: relative;
  cursor: pointer;
  border: none;
  background: none;
}

.ankid-nav-tab.active {
  background: var(--md3-primary);
  color: var(--md3-on-primary);
}

.ankid-section-title {
  font-family: 'UT Breado Sans', 'Helvetica', 'Arial', sans-serif;
  font-size: var(--md3-headline-large);
  font-weight: 700;
  color: var(--md3-primary);
  text-align: center;
  margin-bottom: 8px;
  line-height: 1.3;
}

.ankid-section-subtitle {
  font-family: 'UT Breado Sans', 'Helvetica', 'Arial', sans-serif;
  color: var(--md3-on-surface);
  text-align: center;
  font-size: var(--md3-body-large);
  line-height: 1.5;
}

.ankid-progress-bar {
  width: 100%;
  height: 8px;
  transition: all 500ms var(--md3-motion-easing-emphasized);
  background: var(--md3-surface);
  border-radius: 8px;
  border: 1px solid #000000;
  overflow: hidden;
}

.ankid-progress-fill {
  height: 100%;
  transition: all 500ms var(--md3-motion-easing-emphasized);
  background: var(--md3-primary);
  border-radius: 8px;
}

/* Animations */
.fade-in-up {
  animation: fadeInUp 0.5s var(--md3-motion-easing-emphasized);
}

.slide-in-right {
  animation: slideInRight 0.3s var(--md3-motion-easing-emphasized);
}

.bounce-in {
  animation: bounceIn 0.5s var(--md3-motion-easing-emphasized);
}

.pulse-glow {
  animation: pulse 2s infinite;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes pulse {
  0% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
    background-image: var(--md3-hatching-1);
  }
  100% {
    opacity: 0.8;
  }
}
